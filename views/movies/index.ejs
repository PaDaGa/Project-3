<!DOCTYPE html>
<html>
    <head>
    <%- include('../partials/head')  %>
    </head>
    <body>
      <% if(user){ %>
      <nav>
        <div class="nav-wrapper">
          <a href="/logout" class="brand-logo">Logout</a>
          <ul class="right hide-on-med-and-down">
            <li><a href="#"></a></li>

          </ul>
        </div>
      </nav>

      <div class="container">
        <div class="page-header">
        <h1><a href="/movies">Movies Findr</a></h1>
        <h3>Movie List</h3>
      </div>
      <div class="container">
        <form id="new-movie">
          <div class='form-group'>
            <input id="movie-title" type="text" name="movie[title]" placeholder="Title" class="form-control" >
          </div>
          <div class='form-group'>
            <input id="movie-genre" type="text" name="movie[genre]" placeholder="Genre" class="form-control" >
          </div>
          <div class='form-group'>
            <input id="movie-provider" type="text" name="movie[provider]" placeholder="Provider" class="form-control" >
          </div>
          <div class='form-group'>
            <input type="submit" value='Save Movie' class="btn btn-default">
          </div>
        </form>
      </div>

      <div class="one-half column slideThree">
        <input type="checkbox" value="None" id="slideThree" name="check"/>
        <h4 class="custom-font checkbox">Watched</h4>
          <article class="choices todos-column">
            <ul id="watched">
            </ul>
          </article>

        <div class="one-half column slideThree">
          <h4 class="custom-font checkbox">Not Watched</h4>
            <article class="choices todos-column">
              <ul id="not-watched">
              </ul>
            </article>
        </div>
      </div>
    </body>
</html>
