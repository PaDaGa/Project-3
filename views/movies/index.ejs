<!DOCTYPE html>
<html>

    <head>
      <%- include('../partials/head')  %>
    </head>

    <body>
      <% if(user){ %>
      <nav>
        <div class="nav-wrapper">
          <a href="/logout" class="brand-logo">Logout</a>
          <ul class="right hide-on-med-and-down">
            <li><a href="#"></a></li>
          </ul>
        </div>
      </nav>

      <div class="parallex-container">
        <h1>Movies Findr</h1>
        <h3>Movie List</h3>
      </div>
      <div class="section white">
        <!-- search feature for guidebox api -->
        <input id="search" placeholder="Search by title" type="text">
        <button id="submitSearch" class="btn btn-default">Search</button>
        <ul id= 'searchResults'>
        </ul>
      </div>

      <h4 class="custom-font checkbox">Watched</h4>
      <div class="carousel">
        <a class="carousel-item" href="#one!"><div id="watched">
        </div></a>
        <a class="carousel-item" href="#two!"><img src="http://lorempixel.com/250/250/nature/2"></a>
        <a class="carousel-item" href="#three!"><img src="http://lorempixel.com/250/250/nature/3"></a>
        <a class="carousel-item" href="#four!"><img src="http://lorempixel.com/250/250/nature/4"></a>
        <a class="carousel-item" href="#five!"><img src="http://lorempixel.com/250/250/nature/5"></a>
      </div>

      <h4 class="custom-font checkbox">Not Watched</h4>
      <div class="carousel">
        <a class="carousel-item" href="#one!"><div id="not-watched">
        </div></a>
        <a class="carousel-item" href="#two!"><img src="http://lorempixel.com/250/250/nature/2"></a>
        <a class="carousel-item" href="#three!"><img src="http://lorempixel.com/250/250/nature/3"></a>
        <a class="carousel-item" href="#four!"><img src="http://lorempixel.com/250/250/nature/4"></a>
        <a class="carousel-item" href="#five!"><img src="http://lorempixel.com/250/250/nature/5"></a>
      </div>
        <% } else { %>
          <div class="navbar-fixed">
            <nav>
              <div class="nav-wrapper">
                <a href="" class="brand-logo left">Movie Findr</a>
                <ul class="right">
                  <% if (user) { %>
                    <li><a href="/logout">Logout</a></li>
                  <% } else { %>
                    <li><a href="/auth/google">Login with Google</a></li>
                  <% } %>
                </ul>
              </div>
            </nav>
          </div>
          <h4>Please login to enter MovieFindr!</h4>
        <% } %>
        <footer>Made by Gaye, Darin, Paul</footer>
      <%- include('../partials/script')  %>
    </body>
</html>
